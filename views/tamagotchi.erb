  <h1><%= @tamagotchi.name() %></h1>
  <div class="row">
    <div class="col-sm-6">
      <h3>Species: <%= @tamagotchi.species() %></h3>
      <h4>Food: <%= @tamagotchi.food %></h4>
      <h4>Love: <%= @tamagotchi.love %></h4>
      <h4>Rest: <%= @tamagotchi.rest %></h4>
      <h4>Poops: <%= @tamagotchi.poop %></h4>
    </div>
    <div class="col-sm-6">
      <img src='<%= @pic %>' alt= "<%= @pic %>" class="img-rounded animal-pic">
    </div>
  </div>
    <form method="post">
      <div class="form-group">
        <label for="interactions">Your tamagotchi is waiting for attention...</label>
        <select class="form-control" name="interactions">
          <option value="feed">Feed him</option>
          <option value="pet">Pet him</option>
          <option value="nap">Give him a nap</option>
          <option value="clean">Clean his cage</option>
          <option value="kill">Kill it</option>
        </select>
      </div>
      <button type="submit" class="btn btn-success">Go</button>
    </form>
    <div class="breadcrumb">
      <p><a href="/tamagotchis">Visit Tamagotchi Garden</a></p>
      <p><a href="/tamagotchi/new">Add New Tamagotchi</a></p>
    </div>
